<%= render "shared/header" %>
<div class="main">
  <div class="page-title yellow"><%= "#{@room.name}のお部屋"%></div>
  
  <div class ="topics">
    <div class="memo">トピックを６つまで出してください</div>
    <% @topics.each.with_index(1) do |topic,i|%>
      <div class="topic">
        <div class="num"><%= "#{i}." %></div>
        <div class="topic-name">
          <%= link_to "#{topic.title}", "/rooms/#{@room.id}/topics/#{topic.id}" %>
        </div>  
      </div>   
    <% end %>  
  </div>
  <div class ="new_topic">
    <%= form_with model: [@room,@topic], class: "form-t", local: true do |f| %>
      <%= render "shared/error_messages", model: f.object %>
      <div class="form_input">
        <ul>
          <li><%= f.label  "どんなことを話したいですか？" %></li>
          <li><%= f.text_field :title,placeholder: "タイトルを入力してください　例:行ってみたい国" %></li>
          <li><%= f.label "追加で説明があれば書いてください" %>
          <li><%= f.text_area :memo,placeholder: "例:1人旅で２週間の滞在だとしたら何持っていく？" %></li>
        </ul>
      </div>
      <%= f.submit "送信",class: "form-submit" %>
    <% end %>  
    <div class="dice">
      <input type="button" id="dice-btn" value="サイコロをふる">
      <div id="saikoro"></div>
    </div>
  </div>
</div>  